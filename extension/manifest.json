{
  "name": "PhishGuard â€“ Real-Time Protection",
  "description": "Detects phishing in Gmail and blocks malicious URLs automatically.",
  "version": "5.0",
  "manifest_version": 3,

  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "notifications"
  ],

  "host_permissions": [
    "*://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["toast.js", "content.js"],
      "css": ["toast.css"]
    },
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["toast.js", "gmail.js"],
      "css": ["toast.css"]
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}